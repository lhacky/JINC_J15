<?xml version="1.0" encoding="utf-8" ?>
<install type="module" version="1.5.0" method="upgrade">
    <name>JINC Newsletter UnSubscription Module</name>
    <creationDate>December 2011</creationDate>
    <author>Lhacky</author>
    <authorEmail>lhacky@altervista.org</authorEmail>
    <authorUrl>http://lhacky.altervista.org/jextensions/</authorUrl>
    <copyright>Copyright (C) 2010 - Lhacky</copyright>
    <license>GNU/GPL http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>0.9.4</version>
    <description>The unsubscription module to a newsletter</description>
    <files>
        <filename module="mod_jinc_unsubscription">index.html</filename>
        <filename module="mod_jinc_unsubscription">mod_jinc_unsubscription.php</filename>
        <filename module="mod_jinc_unsubscription">tmpl/index.html</filename>
        <filename module="mod_jinc_unsubscription">tmpl/default.php</filename>
    </files>
    <params addpath="/administrator/components/com_jinc/elements">
        <param name="news_id" type="newsletter" section="com_jinc" default="0" label="Newsletter" description="Choose a newsletter" />
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
    </params>
    <languages folder="mod_jinc_unsubscription/language">
        <language tag="en-GB">en-GB.mod_unsubscription_jinc.ini</language>
        <language tag="it-IT">it-IT.mod_unsubscription_jinc.ini</language>
    </languages>
</install>