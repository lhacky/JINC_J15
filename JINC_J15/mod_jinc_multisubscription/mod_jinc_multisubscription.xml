<?xml version="1.0" encoding="utf-8" ?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
    <name>JINC Newsletter Multi-Subscription Module</name>
    <creationDate>December 2011</creationDate>
    <author>Lhacky</author>
    <authorEmail>lhacky@altervista.org</authorEmail>
    <authorUrl>http://lhacky.altervista.org/jextensions/</authorUrl>
    <copyright>Copyright (C) 2010 - Lhacky</copyright>
    <license>GNU/GPL http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>0.9.4</version>
    <description>The multi-subscription module to a newsletter</description>
    <files>
        <filename module="mod_jinc_multisubscription">index.html</filename>
        <filename module="mod_jinc_multisubscription">mod_jinc_multisubscription.php</filename>
        <filename module="mod_jinc_multisubscription">tmpl/index.html</filename>
        <filename module="mod_jinc_multisubscription">tmpl/default.php</filename>
    </files>
    <languages folder="mod_jinc_multisubscription/language">
        <language tag="de-DE">de-DE.mod_jinc_multisubscription.ini</language>
        <language tag="en-GB">en-GB.mod_jinc_multisubscription.ini</language>
        <language tag="es-ES">es-ES.mod_jinc_multisubscription.ini</language>
        <language tag="fr-FR">fr-FR.mod_jinc_multisubscription.ini</language>
        <language tag="it-IT">it-IT.mod_jinc_multisubscription.ini</language>
        <language tag="nl-NL">nl-NL.mod_jinc_multisubscription.ini</language>
        <language tag="pt-PT">pt-PT.mod_jinc_multisubscription.ini</language>
    </languages>
    <params addpath="/administrator/components/com_jinc/elements">
        <param name="news_id" id="news_id" type="newsletter" section="com_jinc" default="0" label="Newsletter" description="Choose a newsletter" multiple="true" />
        <param name="mod_input_style" type="list" label="Input Style"
                    description="Input Style to get subscriber info. You can inherit input style from newsletter or set it explicitly." 
                    class="inputbox" size="1" default="2">
            <option value="1">Standard</option>
            <option value="2">Minimal</option>
        </param>           
        <param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
    </params>
</extension>